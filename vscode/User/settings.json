    "theme-by-language.themes": {
        "*": "GitHub Plus",
        "latex": "GitHub Plus",
        "bibtex": "GitHub Plus",
        "markdown": "GitHub Plus"
    },
    "workbench.colorTheme": "GitHub Plus",
    
